# NeuroEdge Orchestrator
PORT=7070
LOG_LEVEL=info

# Local services only (recommended for sovereign mode)
KERNEL_URL=http://localhost:8080
ML_URL=http://localhost:8090
MESH_NODE_SHARED_KEY=
ORCHESTRATOR_URL=http://localhost:7070
NEUROEDGE_FED_KEY=
NEUROEDGE_LOCAL_ONLY=true
NEUROEDGE_MODE=sovereign

# Must match kernel key
KERNEL_API_KEY=replace-with-your-shared-api-key
# Optional fallback alias read by code
NEUROEDGE_API_KEY=replace-with-your-shared-api-key

# Security/Auth (strict mode enabled)
AUTH_REQUIRED=true
AUTHZ_ENFORCE_SCOPES=true
AUTHZ_REQUIRE_WORKSPACE=true
DEFAULT_ORG_ID=personal
DEFAULT_WORKSPACE_ID=default
JWT_SECRET=change-me-to-a-long-random-secret
JWT_PUBLIC_KEY=
JWT_ISSUER=neuroedge-auth
JWT_AUDIENCE=neuroedge-clients

# Observability
LANGFUSE_HOST=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
HELICONE_HOST=https://api.helicone.ai
HELICONE_API_KEY=

# Billing/Metering
STRIPE_SECRET_KEY=
STRIPE_METER_EVENT_NAME=neuroedge_tokens
ML_MODEL_NAME=neuroedge-ml
